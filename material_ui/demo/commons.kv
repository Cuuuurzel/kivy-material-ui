#:kivy 1.8

<Label>:
    color: 0, 0, 0, .8
    font_name: 'font/Roboto-Light.ttf'

<Button>:
    font_name: 'font/Roboto-Light.ttf'

<TextInput>:
    color: 0, 0, 0, .8
    font_name: 'font/Roboto-Light.ttf'

<FlatPopup>:
    title_font_size:   dp(20)
    content_font_size: dp(16)
    buttons_font_size: dp(16)
    title_font_name:   'gui/font/RobotoCondensed-Bold.ttf'
    content_font_name: 'gui/font/Roboto-Light.ttf'
    buttons_font_name: 'gui/font/Roboto-Black.ttf'

<RaisedButton>:
    color: ( 0, 0, 0, .8 )


<ListItemButton>:
    font_name: 'font/Roboto-Light.ttf' if not self.is_selected else 'font/Roboto-Medium.ttf'
    font_size: dp(15)
    color: [ 0, 0, 0, .8 ]  if not self.is_selected else ( 1, 1, 1, 1 )
    selected_color: [ .423, 0.647, 0.745, 1] 
    deselected_color: [ 1, 1, 1, 1 ]

[AccordionItemTitle@Label]:
    text: ctx.title
    font_name: 'font/Roboto-Light.ttf' if ctx.item.collapse else 'font/Roboto-Medium.ttf'
    font_size: 20
    color: [ .17, .17, .17, 1 ] if ctx.item.collapse else ( 1, 1, 1, 1 )

    canvas.before:
        Color:
            rgb: 1, 1, 1
        BorderImage:
            source:
                ctx.item.background_normal if ctx.item.collapse else ctx.item.background_selected
            pos: self.pos
            size: self.size
        PushMatrix
        Translate:
            xy: self.center_x, self.center_y
        Rotate:
            angle: 90 if ctx.item.orientation == 'horizontal' else 0
            axis: 0, 0, 1
        Translate:
            xy: -self.center_x, -self.center_y
    canvas.after:
        PopMatrix
