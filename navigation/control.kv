<NavigationController>:
    orientation:'vertical'
    actionprev:actionprev
    actiontext:actiontext
    content:content
    _anim_area:_anim_area

    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size    

    BoxLayout:
        id: content
        orientation: 'horizontal'
        size_hint: (1,None)
        height: root.nav_height

        canvas.before:
            Color:
                rgba: [0,0,0,root.shadow_alpha]
            Rectangle:
                pos: self.pos[0], self.pos[1]-dp(1)
                size: self.size[0], self.size[1]+dp(1)   

            Color:
                rgba: [0,0,0,root.shadow_alpha]
            Rectangle:
                pos: self.pos[0], self.pos[1]-dp(2)
                size: self.size[0], self.size[1]+dp(2)   

            Color:
                rgba: root.nav_color
            Rectangle:
                pos: self.pos
                size: self.size    

        RaisedButton:
            id: actionprev
            font_size: 3 * root.nav_height / 5
            halign: 'left'
            background_color: [0,0,0,0]
            background_color_down: [0,0,0,0]
            background_color_disabled: [0,0,0,0]
            shadow_alpha: 0
            color: root.text_color
            corner_radius: 0
            on_press: root.pop()
            size_hint: None, 1
            width: self.height

        BindedLabel:
            id: actiontext
            text: root.title
            font_size: root.font_size
            halign: 'left'
            valign: 'middle'
            shadow_alpha: 0
            color: root.text_color
            corner_radius: 0

    FloatLayout:
        id: _anim_area

        BoxLayout:
            id: content

        

